    <link rel="stylesheet" href="/css/sidebar.css">
    <!-- Filepond CDN -->
    <link href="https://unpkg.com/filepond@^4/dist/filepond.css" rel="stylesheet" />
    <script src="https://unpkg.com/filepond-plugin-pdf-preview/dist/filepond-plugin-pdf-preview.min.js"></script>
    <title>FPRPL | <%= title %>
    </title>
</head>

<body>
    <!-- Filepond -->
    <script src="https://unpkg.com/filepond@^4/dist/filepond.js"></script>

    <div class="cont">
        <div class="sidebar">
            <div class="header">
                <img src="/images/Vector.png" alt="" class="avatar">
                <span class="nama">Josepp Simanjuntak</span>
            </div>
            <div class="main">
                <div class="list-item">
                    <a class="lurusin" href="#">
                        <img src="/images/dashboard.png" alt="" class="icon">
                        <span class="deskription">Dashboard</span>
                    </a>
                </div>
                <div class="list-item">
                    <a class="lurusin" href="#">
                        <img src="/images/upload.png" alt="" class="icon">
                        <span class="deskription">  Upload</span>
                    </a>
                </div>
                <div class="list-item">
                    <a class="lurusin" href="#">
                        <img src="/images/update.png" alt="" class="icon">
                        <span class="deskription">Update</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="main-konten">
            <div class="kepala-halaman">
                <div class="kepala-kiri">
                    <img class="logo-lmbg" src="/images/KabupatenSleman1.png" alt="">
                    <h5>SISTEM ARSIP DOKUMEN KELURAHAN CONDONGCATUR</h5>
                </div>
                <div class="kepala-kanan">
                    <%- !username ? `<a href="/login" id="log-in">Log In</a> <a href="/signup" id="tombol">Sign Up</a>` : `<a href="/logout">Log Out</a>` %>
                </div>
            </div>
            
            <%- body %>
        </div>
    </div>
</body>

</html>